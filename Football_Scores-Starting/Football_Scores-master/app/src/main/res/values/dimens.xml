<resources>
    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <dimen name="list_horizonal_matgin">2dp</dimen>
    <dimen name="share_button_margin">150dp</dimen>
    <dimen name="TeamNames">17sp</dimen>
    <dimen name="Score">30sp</dimen>
    <dimen name="League">15sp</dimen>

    <!-- Scores Widget -->
    <dimen name="widget_scores_default_width">110dp</dimen>
    <dimen name="widget_scores_default_height">40dp</dimen>
    <dimen name="widget_scores_min_resize_width">40dp</dimen>
    <dimen name="widget_scores_min_resize_height">@dimen/widget_scores_default_height</dimen>
    <dimen name="widget_scores_large_width">220dp</dimen>


    <!-- Text Sizes - We are using DP here rather than SP because these are already large
         font sizes, and going larger will cause lots of view problems. -->
    <dimen name="scores_widget_text_size">24dp</dimen>

    <!-- This is an odd width, but we're trying to match the font closely to keep things working
         on devices that don't yet have Roboto -->
    <dimen name="scores_widget_text_width">38dp</dimen>

    <dimen name="widget_margin">8dp</dimen>

</resources>
